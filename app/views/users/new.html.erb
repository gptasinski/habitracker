<div class="container-fluid">
  <div class="row">

    <div class="col-md-offset-4 col-md-4">
    <%= form_for :user, url: users_path, class: "form-horizontal" do |form| %>

      <div class="form-group">
      <%= form.label :name, class: "col-md-2 control-label" %>
        <div class="col-md-10">
          <%= form.text_field :name, required: true, class: "col-md-4 form-control" %>
        </div>
      </div>

      <div class="form-group">
      <%= form.label :email, class: "col-md-2 control-label" %>
        <div class="col-md-10">
          <%= form.email_field :email, required: true, class: "col-md-4 form-control" %>
        </div>
      </div>

      <div class="form-group">
      <%= form.label :password, class: "col-md-2 control-label" %>
        <div class="col-md-10">
          <%= form.password_field :password, required: true, class: "col-md-4 form-control" %>
        </div>
      </div>

      <div class="form-group">
      <%= form.label :confirm_password, class: "col-md-2 control-label" %>
        <div class="col-md-10">
          <%= form.password_field :password_confirmation, required: true, class: "col-md-4 form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-10">
          <%= button_to 'Sign Up', new_user_path, class: "btn btn-default" %>
        </div>
      </div>

    <% end %>
    </div>

  </div>
</div>