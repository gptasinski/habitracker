<%= render "shared/flash_message" %>

<div class="container-fluid">
  <div class="col-md-2">
    <%= render '/shared/side_navbar' %>
  </div>

  <div class="col-md-offset-1 col-md-4" id="ped-form">
    <%= form_for [current_user, @ped_stat], method: :patch, class: "form-horizontal" do |form| %>
      <%= render partial: "form", locals: { form: form } %>
      <%= render partial: "shared/form_button", locals: { div_class: "col-md-offset-9 col-md-2",
                                                          message: "Update Stat",
                                                          path: edit_user_ped_stat_path(current_user, @ped_stat)} %>
    <% end %>
    <%= render partial: "shared/delete_stat_button", locals: { path: user_ped_stat_path(current_user, @ped_stat) } %>

  </div>
</div>

