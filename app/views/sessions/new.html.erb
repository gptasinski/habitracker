<div class="container-fluid">
  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <%= form_for :session, class: "form-horizontal" do |form| %>
        <%= render partial: "shared/form_group", locals: { form: form, attribute: :email } %>
        <%= render partial: "shared/form_group", locals: { form: form, attribute: :password } %>
        <%= render partial: "form_button" %>
      <% end %>
    </div>
  </div>
</div>