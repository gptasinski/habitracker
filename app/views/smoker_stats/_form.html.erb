<% if @smoker_stat.errors.any? %>
<div id = "error_explanation">
  <h4>Errors:</h4>
  <ul>
    <% @smoker_stat.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  </div>
<% end %>


