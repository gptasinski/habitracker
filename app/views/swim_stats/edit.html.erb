<div class="container">

  <div class="col-md-2">
    <%= render 'shared/side_navbar' %>
    <div class="row">
      <div class="col-md-2">
        <%= link_to 'Edit Stat', edit_user_swim_stat_path(current_user, @swim_stat), class: "btn btn-default side-nav-btn" %>
        <%= link_to 'Delete Stat', user_swim_stat_path(current_user, @swim_stat), method: :delete, data: { confirm: "Are you aure about deleting this stat?"}, class: "btn btn-default side-nav-btn" %>
      </div>
    </div>
  </div>

  <div class="col-md-10">
    <div class="row">
      <%= form_for [current_user, @swim_stat], method: :patch, class: "form-horizontal" do |form| %>

        <%= render partial: 'form', locals: { form: form } %>

        <div class="form-group">
          <div class="col-md-offset-10 col-md-2">
            <%= form.submit :'Update Stat', class: "btn btn-default" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>