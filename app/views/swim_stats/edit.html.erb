<div class="container-fluid">

  <div class="col-md-2">
    <%= render 'shared/side_navbar' %>
    <div class="row">
      <%= link_to 'Edit Stat', edit_user_swim_stat_path(current_user, @swim_stat), class: "btn btn-default side-nav-btn" %>
      <%= render partial: "shared/delete_stat_button", locals: { path: user_swim_stat_path(current_user, @swim_stat) } %>
    </div>
  </div>

  <div class="col-md-10" id="swim-edit">
    <div class="row">
      <%= form_for [current_user, @swim_stat], method: :patch, class: "form-horizontal" do |form| %>
        <%= render partial: "form", locals: { form: form } %>
        <%= render partial: "shared/form_button",
                    locals: { div_class: "col-md-offset-10 col-md-2",
                              message: "Update Stat",
                              path: edit_user_swim_stat_path(current_user, @swim_stat)} %>
      <% end %>
    </div>
  </div>
</div>