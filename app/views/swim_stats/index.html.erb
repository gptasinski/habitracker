<div class="container">

  <div class="col-md-2">
    <%= render 'shared/side_navbar' %>
    <div class="row">
      <div class="col-md-2">
        <%= link_to 'Add Stat', new_user_swim_stat_path(current_user), class: "btn btn-default side-nav-btn" %>
      </div>
    </div>
  </div>

  <div class="col-md-7">
    <div class="row">
      <div class="col-md-2 head">DATE</div>
      <div class="col-md-3 head">TOTAL DISTANCE</div>
      <div class="col-md-2 head">SWIM TIME</div>
      <div class="col-md-3 head">SET DISTANCE</div>
      <div class="col-md-2 head">SET TIME</div>
    </div>

    <% @swim_stats.each do |stat| %>
    <div class="row">
      <div class="col-md-2"><%= link_to stat.date, user_swim_stat_path(current_user, stat) %></div>
      <div class="col-md-3"><%= stat.total_distance %></div>
      <div class="col-md-2"><%= stat.swim_time %></div>
      <div class="col-md-3"><%= stat.set_distance %></div>
      <div class="col-md-2"><%= stat.set_time %></div>
    </div>
    <% end %>
  </div>

  <div class="col-md-3">
    <div class="row">
      <div class="head">USMS RECORDS</div>
      <div class="col-md-offset-1">50 M: </div>
      <div class="col-md-offset-1">100 M: </div>
      <div class="col-md-offset-1">200 M: </div>
      <div class="col-md-offset-1">500 M: </div>
      <div class="col-md-offset-1">800 M: </div>
      <div class="col-md-offset-1">1600 M: </div>
    </div>

    <div class="row">
      <div class="head">MY RECORDS</div>
      <div class="col-md-offset-1">WORST: </div>
      <div class="col-md-offset-2">50 M: </div>
      <div class="col-md-offset-2">100 M: </div>
      <div class="col-md-offset-2">200 M: </div>
      <div class="col-md-offset-2">500 M: </div>
      <div class="col-md-offset-2">800 M: </div>
      <div class="col-md-offset-2">1600 M: </div>
      <div class="col-md-offset-1">BEST: </div>
      <div class="col-md-offset-2">50 M: </div>
      <div class="col-md-offset-2">100 M: </div>
      <div class="col-md-offset-2">200 M: </div>
      <div class="col-md-offset-2">500 M: </div>
      <div class="col-md-offset-2">800 M: </div>
      <div class="col-md-offset-2">1600 M: </div>
    </div>
  </div>
</div>


